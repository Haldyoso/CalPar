<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#71DC06" />
    <!--When Button is in pressed state -->
    <item android:state_activated="true" android:color="@color/purple_500" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="#FF0505" />
    <!--Default Background Color -->
    <item android:color="@android:color/white" />

</selector>